<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back"
    android:layout_height="match_parent"
    tools:context="com.example.android.new_starting.Main4Activity">

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:onClick="addsubjects"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/plus_add_green"
        android:background="@drawable/sha"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageButton8"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/daydisp"
        android:layout_width="243dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:text="Add subjects for"
        android:textColor="#ffffba"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton6"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daydisp"></LinearLayout>

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="55dp"
        android:layout_height="58dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="24dp"
        android:onClick="next11"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/next"
        android:background="@drawable/sha"
        tools:layout_editor_absoluteX="4dp" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="57dp"
        android:layout_height="61dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:onClick="next12"
        android:scaleType="centerInside"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/daydisp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/sha"
        app:srcCompat="@drawable/pre" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:onClick="remove"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButton4"
        app:srcCompat="@drawable/minus"
        android:background="@drawable/sha"
        app:layout_constraintTop_toTopOf="@+id/imageButton9"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/sha"
        android:onClick="next"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButton8"
        app:srcCompat="@drawable/tick"
        tools:layout_editor_absoluteY="435dp"
        tools:layout_editor_absoluteX="169dp" />


</android.support.constraint.ConstraintLayout>
